
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspaan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td class="show"><%= link_to "Show",book_path(book) %></td>
      <td class="show"><%= link_to"Edit",edit_book_path(book) %></td>
      <td class="show"><%= link_to"Destroy",book,method: :delete,date:{confirm:"Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>






<h2>New Book</h2>

<%= form_with model:@book, url:'/books', local:true do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>
<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>
<div>
  <%= f.submit 'Create Book' %>
</div>
<% end %>