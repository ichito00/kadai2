<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>



<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>

    </tr>
  </thead>
  <tbody>

      <% @books.each do |book| %>

        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book) %></td>
          <td><%= link_to"Edit",edit_book_path(book) %></td>
          <td><%= link_to"Destroy",book,method: :delete,date:{confirm:"Are you sure?"} %></td>
      </tr>
      <% end %>

  </tbody>
</table>






